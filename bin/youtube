#!/usr/bin/env ruby
# frozen_string_literal: true

ENV['BUNDLE_GEMFILE'] ||= File.expand_path('../Gemfile', __dir__)

require 'rubygems'
require 'bundler/setup'

$LOAD_PATH.unshift(File.expand_path('../lib', __dir__))
require 'mpv'
require 'lat'

id = ARGV.first
source = ARGV.second

raise 'no youtube id provided' if id.nil?
raise 'no source provided' if source.nil?

command = [
  'youtube-dl',
  '--extract-audio',
  '--audio-format mp3',
  '--write-thumbnail',
  '--print-json',
  # XXX: use system wide tmp dir
  '--output "tmp/%(id)s.%(ext)s"',
  "https://www.youtube.com/watch\?v\=#{id}"
]

json = JSON.parse(`#{command.join(' ')}`.strip)
text = json['fulltitle']

command = [
  'ffmpeg',
  '-y',
  '-i',
  "tmp/#{id}.mp3",
  '-ac',
  '2',
  '-codec:a',
  'libmp3lame',
  '-q:a',
  '0',
  '-af',
  '"loudnorm=I=-16:TP=-2:LRA=11"',
  "tmp/#{id}.af.mp3"
]

`#{command.join(' ')}`.strip

path = File.expand_path('./../spec/blacklist.txt', __dir__)
Lat::Blacklist.default = Lat::FileBlacklist.new(path)

sound = File.expand_path("../tmp/#{id}.af.mp3", __dir__)
image = File.expand_path("../tmp/#{id}.jpg", __dir__)

puts Lat::Text2srs.new(text, source, sound: sound, image: image).call.first
